<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.fancypixel.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true"/>

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        android:layout_margin="16dp"
        android:id="@+id/error_container"
        android:background="@android:color/white"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_error"
                android:textColor="@color/red"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="@color/all_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_refresh"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@color/colorAccent"
                android:text="@string/text_try_again"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            android:layout_margin="16dp"
            android:id="@+id/device_container"
            android:background="@android:color/white"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_device_info"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceButton"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_device_name"
                            android:textColor="@color/all_text"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:textAppearance="?android:attr/textAppearanceListItem"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_device_name"
                            android:textColor="@color/secondary_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_device_id"
                            android:textColor="@color/all_text"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:textAppearance="?android:attr/textAppearanceListItem"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_device_id"
                            android:textColor="@color/secondary_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_device_host"
                            android:textColor="@color/all_text"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:textAppearance="?android:attr/textAppearanceListItem"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_device_host"
                            android:textColor="@color/secondary_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_device_secret"
                            android:textColor="@color/all_text"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:textAppearance="?android:attr/textAppearanceListItem"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_device_secret"
                            android:textColor="@color/secondary_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_device_vhost"
                            android:textColor="@color/all_text"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:textAppearance="?android:attr/textAppearanceListItem"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_device_vhost"
                            android:textColor="@color/secondary_text"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/publish_container"
            android:background="@android:color/white"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/text_channel"
                        android:textColor="@color/all_text"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:id="@+id/channel_to_send"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textNoSuggestions"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:background="@android:color/white"/>
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/secondary_text"
                        android:clickable="true"
                        android:id="@+id/action_close"
                        android:src="@drawable/ic_action_navigation_close"/>
                </LinearLayout>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:hint="@string/text_message"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/msg_to_send"
                    android:inputType="textCapWords"
                    android:textColor="@color/all_text"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:background="@android:color/white"/>

                 <ImageView
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:padding="8dp"
                     android:layout_marginRight="8dp"
                     android:layout_marginLeft="8dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:tint="@color/secondary_text"
                     android:clickable="true"
                     android:id="@+id/action_send"
                     android:src="@drawable/ic_action_navigation_arrow_forward"/>
             </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/button_container"
            android:background="@color/colorAccent"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="@string/action_publish"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/action_publish"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceButton"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="@string/action_subscribe"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/action_subscribe"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceButton"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
